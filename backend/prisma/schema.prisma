generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  //Primary
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  name           String
  password       String
  profilePicURL     String?
  description    String?
  favoriteTopics Topic[]  @relation("UserTopics")
  createdAt      DateTime @default(now())

  // Actions
  blogs          Blog[] 
  savedBlogs     Blog[]   @relation("UserSavedBlogs")
  likedBlogs     Blog[]   @relation("UserLikedBlogs")
  comments       Comment[]
  followers      User[]   @relation("UserFollows")
  following      User[]   @relation("UserFollows")
  notifications  String[] 

  // admin
  active         Boolean  @default(true)
}
model Blog {
  //Primary
  id             Int      @id @default(autoincrement())
  title          String   @unique
  content        String   @unique
  authorId       Int
  comments       Comment[]
  topics         Topic[]  @relation("BlogTopics")
  blogImageURL      String?
  createdAt      DateTime @default(now())

  // Relations
  author         User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  savedByUsers   User[]   @relation("UserSavedBlogs")
  likedByUsers   User[]   @relation("UserLikedBlogs")

  // admin
  active         Boolean  @default(true)
}
model Comment {
  //Primary
  id             Int      @id @default(autoincrement())
  content        String
  blogId         Int
  authorId       Int
  createdAt      DateTime @default(now())

  // Relations
  author         User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  blog           Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  // admin
  active         Boolean  @default(true)
}
model Topic {
  id             Int      @id @default(autoincrement())
  name           String   @unique

  // Relations
  userTopics     User[]   @relation("UserTopics")
  blogTopics     Blog[]   @relation("BlogTopics")
}
model Admin {
  //Primary
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  name           String
  password       String
  profilePicURL  String?
  createdAt      DateTime @default(now())
}
