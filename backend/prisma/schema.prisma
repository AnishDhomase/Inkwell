generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  //Primary
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  name           String
  password       String
  profilePic     String?
  description    String?
  createdAt      DateTime @default(now())

  // Actions
  blogs          Blog[] 
  savedBlogs     Blog[]   @relation("UserSavedBlogs")
  likedBlogs     Blog[]   @relation("UserLikedBlogs")
  comments       Comment[]
  followers      User[]   @relation("UserFollows")
  following      User[]   @relation("UserFollows")
  notifications  String[] 

  // Preferences
  favoriteTopics Topic[]  @relation("UserTopics")
}

model Blog {
  //Primary
  id             Int      @id @default(autoincrement())
  title          String
  content        String
  authorId       Int
  comments       Comment[]
  topics         Topic[]  @relation("BlogTopics")
  createdAt      DateTime @default(now())

  // Relations
  author         User     @relation(fields: [authorId], references: [id])
  savedByUsers   User[]   @relation("UserSavedBlogs")
  likedByUsers   User[]   @relation("UserLikedBlogs")
}

model Comment {
  //Primary
  id             Int      @id @default(autoincrement())
  content        String
  blogId         Int
  authorId       Int
  createdAt      DateTime @default(now())

  // Relations
  author         User     @relation(fields: [authorId], references: [id])
  blog           Blog     @relation(fields: [blogId], references: [id])
}

model Topic {
  //Primary
  id             Int      @id @default(autoincrement())
  name           String   @unique

  // Relations
  userTopics   User[]   @relation("UserTopics")
  blogTopics   Blog[]   @relation("BlogTopics")
}
